<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action для визарда -->
    <record id="action_nst_create_partner_wizard" model="ir.actions.act_window">
        <field name="name">Create Partner</field>
        <field name="res_model">nst.create.partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- List View -->
    <record id="view_nst_l1_demo_tree" model="ir.ui.view">
        <field name="type">list</field>
        <field name="name">nst.l1.demo.tree</field>
        <field name="model">nst.l1.demo</field>
        <field name="arch" type="xml">
            <list string="L1 Demo Records">
                <field name="name"/>
                <field name="text"/>
                <field name="check1"/>
                <field name="check2"/>
                <field name="check_all"/>
                <field name="is_company"/>
                <field name="checked_count"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_nst_l1_demo_kanban" model="ir.ui.view">
        <field name="name">nst.l1.demo.kanban</field>
        <field name="model">nst.l1.demo</field>
        <field name="arch" type="xml">
            <kanban string="L1 Demo Kanban" class="o_kanban_small_column">
                <field name="name"/>
                <field name="text"/>
                <field name="is_company"/>
                <field name="checked_count"/>
                <field name="check1"/>
                <field name="check2"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_manage_pane">
                                    <div t-if="record.text.value" class="text-muted">
                                        <field name="text"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <span t-if="record.is_company.raw_value" class="badge badge-info">Company</span>
                                    <span t-if="!record.is_company.raw_value" class="badge badge-secondary">Person</span>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <span class="badge badge-primary">
                                        Checked: <field name="checked_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_nst_l1_demo_graph" model="ir.ui.view">
        <field name="name">nst.l1.demo.graph</field>
        <field name="model">nst.l1.demo</field>
        <field name="arch" type="xml">
            <graph string="L1 Demo Statistics" type="bar">
                <field name="is_company" type="row"/>
                <field name="integer_demo" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_nst_l1_demo_form" model="ir.ui.view">
        <field name="name">nst.l1.demo.form</field>
        <field name="model">nst.l1.demo</field>
        <field name="arch" type="xml">
            <form string="L1 Demo Form">
                <header>
                    <button name="action_open_partner_form_person" 
                            string="Create Person" 
                            type="object" 
                            class="btn-primary"/>
                    
                    <button name="action_open_partner_form_company" 
                            string="Create Company" 
                            type="object" 
                            class="btn-primary"/>
                    
                    <button name="%(action_nst_create_partner_wizard)d" 
                            string="CREATE PARTNER" 
                            type="action" 
                            class="btn-secondary"/>
                </header>

                <sheet>
                    <group string="Basic Information">
                        <field name="name"/>
                        <field name="text"/>
                        <field name="check_all"/>
                        <field name="check1"/>
                        <field name="check2"/>
                    </group>

                    <group string="Advanced Fields">
                        <group>
                            <field name="select1"/>
                            <field name="select2"/>
                            <field name="is_company"/>
                        </group>
                        
                        <group string="Boolean Fields">
                            <field name="boolean1" invisible="select1 not in ['1'] and select2 not in ['4']"/>
                            <field name="boolean2" invisible="select1 not in ['1'] and select2 not in ['5']"/>
                            <field name="boolean3" invisible="select1 not in ['1'] and select2 not in ['6']"/>
                            <field name="boolean4" invisible="select1 not in ['2'] and select2 not in ['4']"/>
                            <field name="boolean5" invisible="select1 not in ['2'] and select2 not in ['5']"/>
                            <field name="boolean6" invisible="select1 not in ['2'] and select2 not in ['6']"/>
                            <field name="boolean7" invisible="select1 not in ['3'] and select2 not in ['4']"/>
                            <field name="boolean8" invisible="select1 not in ['3'] and select2 not in ['5']"/>
                            <field name="boolean9" invisible="select1 not in ['3'] and select2 not in ['6']"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="All Field Types">
                            <group>
                                <group string="Basic Fields">
                                    <field name="char_demo"/>
                                    <field name="integer_demo"/>
                                    <field name="float_demo"/>
                                    <field name="date_demo"/>
                                    <field name="datetime_demo"/>
                                    <field name="selection_demo"/>
                                </group>
                                <group string="Advanced Fields">
                                    <field name="currency_id"/>
                                    <field name="monetary_demo"/>
                                    <field name="binary_demo"/>
                                </group>
                            </group>
                            
                            <group string="HTML Field">
                                <field name="html_demo" widget="html"/>
                            </group>
                        </page>

                        <page string="Relations">
                            <group>
                                <field name="m2o_partner_id"/>
                                <field name="m2m_tags" widget="many2many_tags"/>
                            </group>
                            
                            <field name="o2m_child_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>

                        <page string="Computed Fields">
                            <group>
                                <field name="labels_combined"/>
                                <field name="checked_count" readonly="1"/>
                                <field name="check1_ts" readonly="1"/>
                                <field name="check2_ts" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
